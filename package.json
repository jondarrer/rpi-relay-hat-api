{
  "name": "rpi-relay-hat-api",
  "version": "1.0.13",
  "description": "An API to control the Waveshare RPi Relay Board",
  "license": "UNLICENSED",
  "author": "Jonathan Darrer <jonny@jondarrer.me.uk>",
  "repository": {
    "type": "git",
    "url": "https:///github.com/jondarrer/rpi-relay-hat-api"
  },
  "main": "dist/start.js",
  "bin": "./bin/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/start.ts",
    "prepare": "husky",
    "start": "node dist/src/start.js",
    "test": "ENV_FILE_PATH=./test.env node --import tsx --test --experimental-test-module-mocks \"src/**/*.spec.ts\""
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "pigpio": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/express": "^4.17.25",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.2",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.2.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-config": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-package-json": "^2.8.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "keywords": [
    "raspberry-pi",
    "waveshare"
  ],
  "engines": {
    "node": ">=24.11.1 <25",
    "npm": "please-use-yarn"
  },
  "lint-staged": {
    "**/package.json": [
      "prettier-package-json --write"
    ],
    "src/**/*.ts": [
      "eslint --fix --quiet",
      "prettier --single-quote --trailing-comma es5 --write"
    ]
  },
  "packageManager": "yarn@4.6.0"
}
