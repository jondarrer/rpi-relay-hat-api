{
  "name": "rpi-relay-hat-api",
  "version": "1.0.13",
  "description": "An API to control the Waveshare RPi Relay Board",
  "license": "UNLICENSED",
  "author": "Jonathan Darrer <jonny@jondarrer.me.uk>",
  "repository": {
    "type": "git",
    "url": "https:///github.com/jondarrer/rpi-relay-hat-api"
  },
  "main": "dist/server.js",
  "bin": "./bin/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "prepare": "husky",
    "start": "node dist/src/server.js",
    "test": "node --import tsx --test --experimental-test-module-mocks \"src/**/*.spec.ts\""
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pigpio": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "prettier-package-json": "^2.8.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.0"
  },
  "keywords": [
    "raspberry-pi",
    "waveshare"
  ],
  "engines": {
    "node": ">=22.14 <23",
    "npm": "please-use-yarn"
  },
  "lint-staged": {
    "**/package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "src/**/*.ts": [
      "eslint --fix --quiet",
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "packageManager": "yarn@4.6.0"
}
